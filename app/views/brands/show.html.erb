<%# Brand Header Section %>
<div class='flex gap-4 m-4 p-4 bg-primary-50 rounded-md'>
  <div class='w-32 h-32'>
  </div>
  
  <div class='flex flex-col gap-2'>
    <h1 class='text-3xl font-bold'><%= @brand.name %></h1>
    
    <div class='flex gap-2 text-sm text-gray-500'>
      <span><%= pluralize(@brand.flowers.count, 'flower') %></span>
      <span>â€¢</span>
      <span><%= pluralize(@brand.edibles.count, 'edible') %></span>
    </div>
  </div>
</div>

<%# Products Section %>
<div class='m-4'>
  <%# Flowers Section %>
  <% if @brand.flowers.any? %>
    <div class='mb-8'>
      <h2 class='text-xl font-semibold mb-4'>Flowers</h2>
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'>
        <% @brand.flowers.each do |flower| %>
          <%= link_to flower_path(flower), class: 'block bg-white rounded-md shadow hover:shadow-md transition-shadow' do %>
            <div class='p-4 flex gap-3'>
              <div class='w-20 h-20'>
                <%= image_tag flower.avatar.variant(:thumb), class: "w-full h-full object-cover rounded-md" if flower.avatar.attached? %>
              </div>
              <div>
                <h3 class='font-medium'><%= flower.name %></h3>
                <p class='text-sm text-gray-500'><%= flower.strain %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Edibles Section %>
  <% if @brand.edibles.any? %>
    <div>
      <h2 class='text-xl font-semibold mb-4'>Edibles</h2>
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'>
        <% @brand.edibles.each do |edible| %>
          <%= link_to edible_path(edible), class: 'block bg-white rounded-md shadow hover:shadow-md transition-shadow' do %>
            <div class='p-4 flex gap-3'>
              <div class='w-20 h-20'>
                <%= image_tag edible.avatar.variant(:thumb), class: "w-full h-full object-cover rounded-md" if edible.avatar.attached? %>
              </div>
              <div>
                <h3 class='font-medium'><%= edible.name %></h3>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div> 