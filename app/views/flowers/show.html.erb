<div class='h-full flex'>
  <div class='flex-1 flex flex-col gap-2 m-8 rounded-md bg-primary-50 '>
    <%= @flower.name %>
    <div>
      <%= image_tag @flower.avatar.variant(:thumb), class: "rounded-full" %>
      <% if @flower.images.present? %>
        <% @flower.images.each do |image| %>
          <%= image_tag image.variant(:thumb) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
