<%= form_with model: flower, class: 'flex flex-col gap-4', data: { controller: 'brand-select' } do |form| %>
  <%= render "shared/form_errors", resource: flower %>

  <div class='flex flex-col gap-2'>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class='flex flex-col gap-2'>
    <%= form.label :thc, "THC" %>
    <%= form.number_field :thc %>
  </div>

  <div class='flex flex-col gap-2'>
    <%= form.label :strain %>
    <%= form.collection_select :strain,
                           Flower::STRAINS,
                           :to_s,
                           :titleize,
                           { include_blank: "What is the strain of the flower?" } %>
  </div>

  <div class='flex flex-col gap-2'>
    <p>Brand</p>
    <%= search_field_tag "brand", nil, data: { action: "input->brand-select#search" } %>
    <div class='border-2' data-brand-select-target='results'></div>
  </div>

  <%= form.submit "Save changes", class: "bg-primary text-primary-50 rounded p-2" %>
<% end %>
