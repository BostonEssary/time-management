<%# locals: (score:, text_size: "text-xl" ) %>
<div class='flex gap-2 items-center'>
  <% score.to_i.times do %>
    <i class="fa-solid fa-cannabis <%= text_size %>"></i>
  <% end %>
  <% (5 - score.to_i).times do %>
    <i class="fa-regular fa-circle <%= text_size %>"></i>
  <% end %>
  <p class='text-sm text-gray-500'><%= score.round(1) %>/5</p>
</div>