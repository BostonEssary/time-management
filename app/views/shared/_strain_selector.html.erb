<%# locals: ( model: nil, frame: nil ) %>
<div class="flex flex-wrap gap-2">
    <span class="text-primary-700 font-medium py-2">Strain Type:</span>
    <%= link_to "All", polymorphic_path(model, sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:filter].blank? ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}", data: { turbo_frame: frame } %>
    <%= link_to "Sativa", polymorphic_path(model, filter: 'sativa', sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:filter] == 'sativa' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}", data: { turbo_frame: frame } %>
    <%= link_to "Indica", polymorphic_path(model, filter: 'indica', sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:filter] == 'indica' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}", data: { turbo_frame: frame } %>
    <%= link_to "Hybrid", polymorphic_path(model, filter: 'hybrid', sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:filter] == 'hybrid' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}", data: { turbo_frame: frame } %>
</div>