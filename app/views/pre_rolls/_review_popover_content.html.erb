<%# locals: (review:) %>
<div class="w-64 p-4">
  <div class="flex items-center gap-3 mb-2">
    <%= image_tag review.user.avatar.variant(:thumb), class: "w-8 h-8 rounded-full" if review.user.avatar.attached? %>
    <div>
      <p class="font-medium"><%= review.user.username %></p>
      <%= render 'shared/rating', score: review.score, text_size: 'text-xs' %>
    </div>
  </div>
  <p class="text-sm text-gray-600"><%= truncate(review.comment, length: 100) %></p>
</div> 