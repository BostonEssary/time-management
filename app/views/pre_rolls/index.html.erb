<div class="min-h-screen bg-gradient-to-b from-primary-50/50 to-white">
  <div class="relative h-[400px]">
    <%= image_tag "pre-roll-hero.jpg", class: "w-full h-full object-cover" %>
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/30 flex items-center">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl text-white">
          <h1 class="text-5xl font-bold mb-4"> Pre-Rolls</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 -mt-8 pb-12">
    <div class="mb-8 bg-white rounded-xl shadow-lg p-6 relative z-10">
      <div class="flex flex-col gap-6">
        <div>
          <h2 class="text-lg font-semibold text-primary-900">Search & Filter</h2>
          <p class="text-sm text-primary-600">Find the perfect pre-roll for your needs</p>
        </div>

        <%# Search Bar %>
        <div class="max-w-2xl flex gap-4 items-center">
          <%= form_with url: pre_rolls_path, method: :get, class: "flex-1", data: { turbo_frame: "pre_rolls", controller: "search" } do |f| %>
            <div class="relative">
              <%= f.text_field :query,
                  value: params[:query],
                  class: "w-full pl-10 pr-4 py-3 rounded-lg border border-primary-200 focus:ring-2 focus:ring-primary-300 focus:border-primary-300 placeholder-primary-400 bg-white",
                  placeholder: "Search by name, strain, or brand...",
                  data: { action: "input->search#debounce" } %>
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-primary-400"></i>
            </div>
          <% end %>
          <%= link_to new_pre_roll_path, class: "flex items-center gap-2 bg-primary hover:bg-primary-600 text-white px-4 py-3 rounded-lg transition-colors", data: { turbo_frame: "_top" } do %>
            <i class="fa-solid fa-plus"></i>
            <span>Add New Pre-Roll</span>
          <% end %>
        </div>

        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 pt-4 border-t border-primary-100">
          <div class="flex flex-wrap gap-2">
            <span class="text-primary-700 font-medium py-2">Strain Type:</span>
            <%= link_to "All", pre_rolls_path(sort: params[:sort], query: params[:query], infused: params[:infused]), class: "px-4 py-2 rounded-full #{params[:filter].blank? ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
            <%= link_to "Sativa", pre_rolls_path(filter: 'sativa', sort: params[:sort], query: params[:query], infused: params[:infused]), class: "px-4 py-2 rounded-full #{params[:filter] == 'sativa' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
            <%= link_to "Indica", pre_rolls_path(filter: 'indica', sort: params[:sort], query: params[:query], infused: params[:infused]), class: "px-4 py-2 rounded-full #{params[:filter] == 'indica' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
            <%= link_to "Hybrid", pre_rolls_path(filter: 'hybrid', sort: params[:sort], query: params[:query], infused: params[:infused]), class: "px-4 py-2 rounded-full #{params[:filter] == 'hybrid' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
          </div>

          <div class="flex flex-wrap gap-2">
            <span class="text-primary-700 font-medium py-2">Type:</span>
            <%= link_to "All", pre_rolls_path(filter: params[:filter], sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:infused].blank? ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
            <%= link_to "Classic", pre_rolls_path(infused: 'false', filter: params[:filter], sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:infused] == 'false' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
            <%= link_to "Infused", pre_rolls_path(infused: 'true', filter: params[:filter], sort: params[:sort], query: params[:query]), class: "px-4 py-2 rounded-full #{params[:infused] == 'true' ? 'bg-primary text-white' : 'bg-primary-50 text-primary hover:bg-primary-100'}" %>
          </div>
          
          <div class="w-full sm:w-auto">
            <%= form_with url: pre_rolls_path, method: :get, class: "flex items-center gap-2", data: { turbo_frame: "pre_rolls", controller: "auto-submit" } do |f| %>
              <%= f.hidden_field :filter, value: params[:filter] if params[:filter].present? %>
              <%= f.hidden_field :query, value: params[:query] if params[:query].present? %>
              <%= f.hidden_field :infused, value: params[:infused] if params[:infused].present? %>
              <label class="text-primary-700 font-medium whitespace-nowrap">Sort by:</label>
              <%= f.select :sort,
                  [
                    ['Name (A-Z)', 'name_asc'],
                    ['Name (Z-A)', 'name_desc'],
                    ['THC (High-Low)', 'thc_desc'],
                    ['THC (Low-High)', 'thc_asc'],
                    ['Rating (High-Low)', 'rating_desc'],
                    ['Rating (Low-High)', 'rating_asc']
                  ],
                  { selected: params[:sort], include_blank: 'Featured' },
                  {
                    class: "min-w-[200px] border border-primary-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-primary-300 focus:border-primary-300 bg-white",
                    data: { action: "change->auto-submit#submit" }
                  }
              %>
            <% end %>
          </div>
        </div>

        <% if params[:filter].present? || params[:sort].present? || params[:query].present? || params[:infused].present? %>
          <div class="flex flex-wrap items-center gap-2 pt-2 border-t border-primary-100">
            <span class="text-sm text-primary-600">Active filters:</span>
            <% if params[:query].present? %>
              <span class="text-sm bg-primary-50 text-primary px-3 py-1 rounded-full">
                Search: "<%= params[:query] %>"
                <%= link_to "×", pre_rolls_path(filter: params[:filter], sort: params[:sort], infused: params[:infused]), class: "ml-1 font-bold hover:text-primary-700" %>
              </span>
            <% end %>
            <% if params[:filter].present? %>
              <span class="text-sm bg-primary-50 text-primary px-3 py-1 rounded-full">
                <%= params[:filter].titleize %>
                <%= link_to "×", pre_rolls_path(sort: params[:sort], query: params[:query], infused: params[:infused]), class: "ml-1 font-bold hover:text-primary-700" %>
              </span>
            <% end %>
            <% if params[:infused].present? %>
              <span class="text-sm bg-primary-50 text-primary px-3 py-1 rounded-full">
                <%= params[:infused] == 'true' ? 'Infused' : 'Classic' %>
                <%= link_to "×", pre_rolls_path(filter: params[:filter], sort: params[:sort], query: params[:query]), class: "ml-1 font-bold hover:text-primary-700" %>
              </span>
            <% end %>
            <% if params[:sort].present? %>
              <span class="text-sm bg-primary-50 text-primary px-3 py-1 rounded-full">
                <%= params[:sort].titleize.gsub('Asc', '↑').gsub('Desc', '↓') %>
                <%= link_to "×", pre_rolls_path(filter: params[:filter], query: params[:query], infused: params[:infused]), class: "ml-1 font-bold hover:text-primary-700" %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
      <turbo-frame id="pre_rolls" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center">
        <%= render partial: "shared/product_card", collection: @pre_rolls, as: :product, locals: { path_helper: :pre_roll_path, 
                                                                                                   display_options: { show_infused: true } } %> 
      </turbo-frame>

      <div class="mt-8 flex justify-center">
        <%= paginate @pre_rolls %>
      </div>
    </div>

    <% if @pre_rolls.empty? %>
      <div class="text-center py-12">
        <div class="mb-4">
          <i class="fa-solid fa-joint text-6xl text-primary-300"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No pre-rolls found</h3>
        <p class="text-gray-600">Try adjusting your search or filters to find what you're looking for.</p>
      </div>
    <% end %>
  </div>
</div> 