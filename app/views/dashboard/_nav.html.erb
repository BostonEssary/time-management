<div
  class='
    hidden md:flex h-10 justify-between p-2 items-center bg-primary-400 text-white
    rounded-md
  '
>
  <%= link_to "SiteName", root_path %>
  <div class='w-1/3'>
    <ul class='flex justify-between'>
      <li>Page 1</li>
      <li>Page 2</li>
      <li>Page 3</li>
    </ul>
  </div>
  <div>
    <% if user_signed_in? %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign In",
      new_user_session_path,
      class: "bg-primary text-white p-2 rounded-md" %>
    <% end %>
  </div>
</div>

<div data-controller='nav' class='md:hidden'>
  <div class='fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200'>
    <div class='flex justify-between items-center h-14 px-4'>
      <%= link_to "SiteName", root_path %>
      <button class='w-fit' data-action='nav#toggleMobileMenu'>
        <i class="fa-solid fa-bars text-2xl"></i>
      </button>
    </div>
  </div>

  <div
    class='
      hidden fixed right-0 top-0 h-screen bg-white z-50 w-2/3 shadow-lg
      transition-transform duration-300 ease-in-out border-l border-gray-200
    '
    data-nav-target='mobileMenu'
  >
    <div class='p-6 space-y-6'>
      <div class='flex justify-end'>
        <button class='text-gray-500' data-action='nav#toggleMobileMenu'>
          <i class="fa-solid fa-times text-xl"></i>
        </button>
      </div>

      <ul class='space-y-4'>
        <li><%= link_to "Page 1", "#", class: "block py-2 hover:text-primary" %></li>
        <li><%= link_to "Page 2", "#", class: "block py-2 hover:text-primary" %></li>
        <li><%= link_to "Page 3", "#", class: "block py-2 hover:text-primary" %></li>
      </ul>

      <div class='pt-4 border-t border-gray-200'>
        <% if user_signed_in? %>
          <%= button_to "Logout",
          destroy_user_session_path,
          method: :delete,
          class: "w-full text-left py-2" %>
        <% else %>
          <%= link_to "Sign In",
          new_user_session_path,
          class: "bg-primary text-white p-2 rounded-md inline-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
